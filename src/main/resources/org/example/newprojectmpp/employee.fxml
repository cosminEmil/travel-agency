<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.newprojectmpp.controller.EmployeeController"
            prefHeight="500.0" prefWidth="800.0"
            style="-fx-padding: 20;">

    <Label layoutX="20" layoutY="20" text="Employee Management"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="employeeTable" layoutX="20" layoutY="60" prefHeight="300" prefWidth="760">
        <columns>
            <TableColumn prefWidth="100" text="ID" fx:id="idColumn"/>
            <TableColumn prefWidth="200" text="Name" fx:id="nameColumn"/>
            <TableColumn prefWidth="200" text="Email" fx:id="emailColumn"/>
        </columns>
    </TableView>

    <GridPane layoutX="20" layoutY="370" hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox layoutX="20" layoutY="480" spacing="10">
        <Button fx:id="addButton" text="Add" onAction="#handleAddEmployee"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteEmployee"/>
        <Button fx:id="clearButton" text="Clear" onAction="#handleClearFields"/>
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
    </HBox>

    <Label fx:id="statusLabel" layoutX="20" layoutY="520"/>
</AnchorPane>