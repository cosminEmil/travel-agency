<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.newprojectmpp.EmployeeController"
            prefHeight="500.0" prefWidth="800.0"
            style="-fx-padding: 20;">

    <!-- Header -->
    <Label layoutX="20" layoutY="20" text="Employee Management"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Employee Table -->
    <TableView fx:id="employeeTable" layoutX="20" layoutY="60"
               prefHeight="300" prefWidth="760">
        <columns>
            <TableColumn prefWidth="100" text="ID">
                <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Name">
                <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Position">
                <cellValueFactory><PropertyValueFactory property="position"/></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Salary">
                <cellValueFactory><PropertyValueFactory property="salary"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Form for Add/Edit -->
    <GridPane layoutX="20" layoutY="370" hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Position:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="positionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Salary:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="salaryField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Action Buttons -->
    <HBox layoutX="20" layoutY="480" spacing="10">
        <Button fx:id="addButton" text="Add" onAction="#handleAddEmployee"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="updateButton" text="Update" onAction="#handleUpdateEmployee"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteEmployee"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button fx:id="clearButton" text="Clear" onAction="#handleClearFields"/>
    </HBox>

    <!-- Status Message -->
    <Label fx:id="statusLabel" layoutX="20" layoutY="520"
           style="-fx-text-fill: #ff5722; -fx-font-weight: bold;"/>

</AnchorPane>